// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Gender {
  MALE
  FEMALE
  NOT_SPECIFIED
}

model User {
  id                Int      @id @default(autoincrement())
  name              String
  email             String   @unique
  password          String
  age               Int
  gender            Gender
  // Relationship to manage user genre preferences
  genre_preferences Genre[]  @relation("UserToGenre")
  reviews           Review[] @relation("UserReviews")
}

model Genre {
  id      Int    @id @default(autoincrement())
  tmdb_id Int    @unique
  name    String
  // Relationship fields documenting many-to-many with Movie and User

  users User[] @relation("UserToGenre")
}

model Watchlist {
  id            Int      @id @default(autoincrement())
  user_id       Int
  movie_id      Int
  genres        String[]
  released_year Int
  runtime       Int
  vote_average  Float
  casts         String[]
  liked         Boolean
  is_watched    Boolean  @default(false)
  is_reviewed   Boolean  @default(false)

  reviews Review[] @relation("WatchlistReviews")
}

model Review {
  id       Int    @id @default(autoincrement())
  comment  String
  rating   Int
  movie_id Int

  watchlist_id Int
  user_id      Int
  watchlist    Watchlist @relation(fields: [watchlist_id], references: [id], name: "WatchlistReviews")
  user         User      @relation(fields: [user_id], references: [id], name: "UserReviews")

  @@unique([user_id, movie_id])
  @@index([watchlist_id])
  @@index([user_id])
  @@index([movie_id])
}
